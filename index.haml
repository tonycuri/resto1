-gallery_images = ["club-sandwich.jpg","papas.jpg","hamburger.jpg","panini.jpg","hot-cakes.jpg","combo.jpg"]
!!!5
%html{class:"no-js",lang:"es"}
  %head
    %meta{charset:"uft-8"}
    %title La mejor comida en Restaurante Web
    %meta{name:"description",content:"Come rico y barato en el mejor restaurante de la ciudad, servicio de primera."}
    %meta{name:"viewport",content:"width=device-width, initial-scale=1"}
    %meta{:"data-name"=> "image-counter",content:"#{gallery_images.size - 1}"}
    %link{rel:"stylesheet", href:"css/normalize.css"}
    %link{rel:"stylesheet", href:"css/bootstrap.css"}
    %link{rel:"stylesheet", href:"css/flexboxgrid.min.css"}
    %link{rel:"stylesheet", href:"https://fonts.googleapis.com/css?family=Dancing+Script" }
    %link{rel:"stylesheet", href:"css/style.css"}
    %script{src:"js/vendor/modernizr-2.8.3.min.js"}
  %body
    ="<!--[if lt IE 8]>"
    %p{class:"browserupgrade"}
      Estás usando un navegador
      %strong desactualizado.
      Por favor
      %a{href:"http://browsehappy.com/"}
      actualiza tu navegador
      para una mejor experiencia
    ="<![endif]-->"
    .video-container
      %video{autoplay:true,loop:true,width:"1280",height:"720",poster:"/videos/images/bbq.jpg"}
        %source{src:"videos/mp4/bbq.mp4",typ:"video/mp4"}
        %source{src:"videos/webm/bbq.webm",typ:"video/webm"}
    .row.full-height.middle-xs.center-xs.relative.up#home
      .col-xs-12
        .box.white-text
          %img{src:"imgs/logo.png",width:200}
          %h1.white-text.dancing-script.title.no-margin Restaurante Facilito
          %p#is-open
            %i.glyphicon.glyphicon-time
            %span.text Abierto ahora
      %nav.fixed#navigation.top.right.white-text.navigation
        -menu = [{title:"Home",link:"#home"},{title:"Menú",link:"#menu"},{title:"Galería",link:"#gallery"},{title:"Contacto",link:"#contact"},{title:"Cómo llegar",link:"#location"}]
        %ul.list-inline
          -menu.each do |item|
            %li
              %a{href:item[:link]}= item[:title]
      .absolute.black.large-padding.white-text.full-width#description
        .row.middle-xs.center-xs
          .col-xs-7.col-sm-6.white-text.medium
            Atención cálida y comida preparada por artistas
          .col-xs.hidden#sticky-navigation
            .box
              %nav.text-right.navigation#responsive-nav
                %i.glyphicon.glyphicon-menu-hamburger.white-text.subtitle#menu-opener.glyphicon.glyphicon-remove
                %ul.list-inline
                  -menu.each do |item|
                    %li
                      %a.menu-link{href:item[:link]}= item[:title]

    .text-center.relative#menu
      .absolute.white#menu-title
        %h2.dancing-script.title Menú
      -menu_photos = [{name:"Club Sandwich", image:"club-sandwich",pricing:"10.00"},
                    {name:"Combo Hamburgueza", image:"combo",pricing:"50.00"},
                    {name:"Hamburgueza", image:"hamburger",pricing:"20.00"},
                    {name:"Hot Cakes", image:"hot-cakes",pricing:"15.00"},
                    {name:"Panini", image:"panini",pricing:"12.00"},
                    {name:"Papas al horno", image:"papas",pricing:"17.00"},
                    {name:"Club Sandwich", image:"club-sandwich",pricing:"10.00"},
                    {name:"Hamburgueza", image:"hamburger",pricing:"20.00"}]
      .row
        -menu_photos.each do |photo|
          .col-md-4.col-lg-3.col-sm-6.col-xs-12.food{style:"background-image:url(imgs/food/#{photo[:image]}-thumb.jpg)"}
            .screen
              .row.middle-xs.full-height
                .col-xs-12.white-text
                  %h3.dancing-script.subtitle= photo[:name]
                  %p.no-margin=photo[:pricing]+ " USD"
    #gallery
      .inner
        -gallery_images.each do |image|
          .image{style:"background-image:url(imgs/food/#{image})"}
    .container
      .card.white.black-text.text-center.relative
        %h3.medium.slim
          En
          %strong.dancing-script.medium RestauranteFacilito
          cocinar no es una profesión, no es una técnica, es un
          %strong.dancing-script.medium arte
        %p.top-space
          Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum.
          %strong.dancing-script.medium Tony -chef

    .black.white-text.full-height#contact
      .row.middle-xs.full-height
        .col-xs-12
          .box
            %p.text-center.medium#info-contacto Presiona enter para llenar el campo correspondiente y enviarnos un correo.
            %form{action:"https://formspree.io/curicaballero@gmail.com",method:"POST",id:"contact-form",class:"step-form"}
              .row.center-xs
                .col-xs-12.-col-sm-2.col-md-1.first-md
                  .box
                    -3.times do |i|
                      -if i == 0
                        .path-step.active
                      -else
                        .path-step
                .col-xs-12.col-sm-3.first-xs
                  .box
                    %fieldset.step.active
                      %input{type:"email",name:"email",placeholder:"Tu correo electrónico",class:"input",required:"true"}
                    %fieldset.step
                      %input{type:"text",name:"name",placeholder:"Tu nombre",class:"input",required:"true"}
                    %fieldset.step
                      %textarea{type:"body",name:"body",placeholder:"Tu mensaje...",class:"input",required:"true"}
    #location
      #map
      #message.black.large-padding.white-text.text-center.medium
        prueba


    %script{src:"https://code.jquery.com/jquery-3.2.1.min.js",integrity:"sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=",crossorigin:"anonymous"}
    %script
      window.jQuery || document.write("<script src='/js/vendor/jquery-1.12.0.min.js'><\/script>");
    %script{src:"https://maps.googleapis.com/maps/api/js?key=AIzaSyBPNHaEIQabIFBDWl9pshUI3y__0wCTKhg"}
    %script{src:"/dist/app.js"}
    